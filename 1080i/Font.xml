<?xml version="1.0" encoding="UTF-8"?>
<fonts>

    <fontset id="Default" unicode="false">
        <include>Font_Default</include>
    </fontset>

    <fontset id="NotoRoboto - Arabic / Hebrew" unicode="true">
        <include content="Font_Default">
            <param name="font_black">RobotoNotoCondensed-Black.ttf</param>
            <param name="font_bold">RobotoNotoCondensed-Bold.ttf</param>
            <param name="font_regular">RobotoNotoCondensed-Regular.ttf</param>
            <param name="font_light">RobotoNotoCondensed-Light.ttf</param>
            <param name="aspect_system">0.8</param>
        </include>
    </fontset>

    <fontset id="CJK - Chinese / Japanese / Korean" unicode="true">
        <include content="Font_Default">
            <param name="font_black">resource://resource.font.robotocjksc/RobotoCJKSC-Bold.ttf</param>
            <param name="font_bold">resource://resource.font.robotocjksc/RobotoCJKSC-Bold.ttf</param>
            <param name="font_regular">resource://resource.font.robotocjksc/RobotoCJKSC-Regular.ttf</param>
            <param name="font_light">resource://resource.font.robotocjksc/RobotoCJKSC-Light.ttf</param>
            <param name="aspect_system">0.8</param>
            <param name="aspect_standard">0.89</param>
        </include>
    </fontset>
    
    <!-- MISC032: Add Netflix and Amazon fonts -->
    <fontset id="Netflix" unicode="false">
        <include content="Font_Default">
            <param name="font_black">Netflixsans-Black.ttf</param>
            <param name="font_bold">Netflixsans-Bold.ttf</param>
            <param name="font_regular">Netflixsans-Regular.ttf</param>
            <param name="font_light">Netflixsans-Light.ttf</param>
            <param name="aspect_system">0.8</param>
        </include>
    </fontset>
    
    <fontset id="Amazon" unicode="false">
        <include content="Font_Default">
            <param name="font_black">Amazon-Black.ttf</param>
            <param name="font_bold">Amazon-Bold.ttf</param>
            <param name="font_regular">Amazon-Regular.ttf</param>
            <param name="font_light">Amazon-Light.ttf</param>
            <param name="aspect_system">0.8</param>
        </include>
    </fontset>


</fonts>

