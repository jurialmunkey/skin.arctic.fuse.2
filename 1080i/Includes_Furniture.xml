                <include content="View_Furniture_Bottom_ViewLine" condition="Window.IsMedia + !Window.IsVisible(addonbrowser) + !Window.IsVisible(eventlog)">
                    <param name="visible">true</param>
                    <!-- <param name="label">$LOCALIZE[31135]$INFO[Container.CurrentPage, , $LOCALIZE[20163] ]$INFO[Container.NumPages]</param> -->
                    <param name="label">$INFO[Container.NumItems,, $LOCALIZE[31022]]</param>
                </include>
                <include content="View_Furniture_Bottom_ViewLine" condition="$EXP[Exp_PlainBackgroundWindows]">
                    <param name="visible">true</param>
                    <param name="label">Kodi$INFO[System.BuildVersionCode, v,]</param>
